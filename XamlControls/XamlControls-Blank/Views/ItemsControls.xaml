<Page
    x:Class="Samples.Views.ItemsControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Samples.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:SampleViewModel xmlns:vm="using:Samples.ViewModels" />
    </Page.DataContext>

    <Pivot Title="Input Controls" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <PivotItem Header="ComboBox" DataContext="{Binding Item}" />
        <PivotItem Header="FlipView" DataContext="{Binding Item}" />
        <PivotItem Header="GridView" DataContext="{Binding Item}" />
        <PivotItem Header="Hub" DataContext="{Binding Item}" />
        <PivotItem Header="ListBox" DataContext="{Binding Item}" />
        <PivotItem Header="ListView" DataContext="{Binding Item}" />
        <PivotItem Header="Pivot" DataContext="{Binding Item}" />
    </Pivot>
</Page>
